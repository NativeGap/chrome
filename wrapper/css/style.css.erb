html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: <%= @app.background %>;
}

body {
  min-width: <%= @build.chrome_width %>px;
  max-width: <%= @build.chrome_width %>px;
  min-height: <%= @build.chrome_height %>px;
  max-height: <%= @build.chrome_height %>px;
}

webview, iframe {
  width: 100%;
  height: 100%;
  border: 0;
}
